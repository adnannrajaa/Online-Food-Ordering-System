
@{
    if (Session["Email"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/AdminLayout/_LayoutAdmin.cshtml";

}


<div class="row">
    <div class="update ml-auto" style="margin-right:12px;">

        <button type="submit" class="btn btn-primary btn-round" data-toggle="modal" data-target="#myModal"><i class="nc-icon nc-simple-add"> </i>  NEW CATEGORY</button>
    </div>
</div>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Category</h4>

                </div>
                <div class="card-body">
                    <div>
                        <table class="table" id="tableData">
                            <thead class="text-primary">
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Category Name
                                    </th>
                                </tr>

                                <tr hidden id="dataRow">
                                    <td id="No"></td>
                                    <td id="category-name"></td>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Category</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Category Name : </label>
                    <input class="form-control" placeholder="Category Name" id="categoryName" title="Category Name" required />
                    <label class="text-danger" id="show-error-msg"></label>
                </div>

            </div>
            <div class="modal-footer">
                <div class="left-side">
                    <button type="button" class="btn btn-default btn-simple" data-dismiss="modal">Never mind</button>
                </div>
                <div class="divider"></div>
                <div class="right-side">
                    <button type="button" onclick="AddNewCategory()" class="btn btn-primary btn-simple">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!--    end modal -->

@{ var version = DateTime.Now.Millisecond;}
@section scripts{
    
    <script>
        $(document).ready(function () {
            $("#category").addClass("active");
        });
    </script>
    <script src="~/CustomFiles/js/Admin/product-category.js?version=@version"></script>
}