<body>
@Html.Partial("Home/_HeaderPartial")
    <!-- banner -->

    <!-- banner -->
   @RenderBody()


    <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 id="exampleModalLabel">Shopping Cart</h4>

                </div>
                <div class="modal-body">
                    <table class="timetable_sub" id="cart-table">
                        <thead>
                            <tr>
                                <th>SL No.</th>
                                <th>Product</th>
                                <th>Quality</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Remove</th>
                            </tr>
                            <tr class="rem1" id="cart-dataRow" hidden>
                                <td class="invert" id="cart-no">1</td>
                                <td class="invert-image">
                                    <center> <img id="cart-image" alt="image" class="img-responsive" style="max-height:100px;max-width:100px; align-content:center"></center></td>
                                <td class="invert">
                                    <div class="quantity">
                                        <div class="quantity-select">
                                            <div class="entry value-minus">&nbsp;</div>
                                            <div class="entry value"><label id="cart-quantity"></label></div>
                                            <div class="entry value-plus active">&nbsp;</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="invert" id="cart-name"></td>

                                <td class="invert" id="cart-price"></td>
                                <td class="invert">
                                    <div class="rem">
                                        <div class="close1"> </div>
                                    </div>

                                </td>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                           
                        </tbody>
                    </table>
                    <br />
                    <div>Total price: Rs <span class="total-cart"></span></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" onclick="orderNow()" class="btn btn-primary clear-cart">Order now</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade login" id="loginModal">
        <div class="modal-dialog login animated">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="content">
                            <div class="verifyMyLogin"></div>
                            <div class="error"></div>
                            <div class="form loginBox">
                                <input id="userName" class="form-control" type="text" placeholder="User Name" name="userName" required>
                                <input id="password" class="form-control" type="password" placeholder="Password" name="password" required>
                                <input class="btn btn-default btn-login" type="button" value="Login" onclick="loginAjax()">
                            </div>
                        </div>
                    </div>

                    <div class="box">
                        <div class="content registerBox" style="display:none;">
                            <div class="verifyMyLoginR"></div>
                            <div class="errorRegister"></div>
                            <div class="form">

                                <input id="Email" class="form-control" type="text" placeholder="Email" name="Email" onchange="IsEmailExist()">
                                <input id="userNameR" class="form-control" type="text" placeholder="User Name" name="userName" onchange="IsUserExist()">
                                <input id="passwordR" class="form-control" type="password" placeholder="Password" name="password">
                                <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation">
                                <input class="btn btn-default btn-register" type="button" value="Create account" name="commit" onclick="registerUser()">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="forgot login-footer">
                        <span>
                            Looking to
                            <a href="javascript: showRegisterForm();">create an account</a>
                            ?
                        </span>
                    </div>
                    <div class="forgot register-footer" style="display:none">
                        <span>Already have an account?</span>
                        <a href="javascript: showLoginForm();">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
   

    @Html.Partial("Home/_FooterPartial")
    <div class="loaderbody" id="loaderbody">
        <div class="loader"></div>
    </div>
    @*<script src="~/scripts/jquery-1.10.2.min.js"></script>*@


    <script src="~/scripts/dataTables.js"></script>
    <script src="~/Templates/User/web/js/bootstrap.min.js"></script>
    <script src="~/scripts/notify.min.js"></script>
  @RenderSection("scripts", required: false)
        <script src="~/CustomFiles/js/Home/add-to-cart.js?@DateTime.Now.Millisecond"></script>
    <script src="~/CustomFiles/js/Home/load-categories.js?@DateTime.Now.Millisecond"></script>
    <script src="~/CustomFiles/js/Account/login-Register.js?@DateTime.Now.Millisecond"></script>
</body>
